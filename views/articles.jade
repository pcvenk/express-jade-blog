extends layout

block content
    .spacer
    .container
        .row
            .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
                each article, i in articles
                    .post-preview
                        a(href='/articles/show/:id')
                            h2.post-title #{article.title}
                            h3.post-subtitle #{article.subtitle}
                        p.post-meta #{article.author}
                            |  on #{moment(article.createdAt).format('MMMM Do YYYY, h:mm:ss a')}
                    hr

                // Pager
                ul.pager
                    li.next
