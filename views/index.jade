extends layout

block content
            // Set your background image for this header on the line below.
            header.intro-header(style="background-image: url('images/sports.jpg')")
                .container
                    .row
                        .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
                            .site-heading
                                h1 SportsBlog
                                hr.small
                                span.subheading Clean and simple sportsblog for adrenalin junkies
            // Main Content
            .container
                .row
                    .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
                        each article, i in articles
                            .post-preview
                                a(href='/articles/show/:id')
                                    h2.post-title #{article.title}
                                    h3.post-subtitle #{article.subtitle}
                                p.post-meta #{article.author}
                                    |  on #{moment(article.createdAt).format('MMMM Do YYYY, h:mm:ss a')}
                            hr
